                    "name": "Font 20"
                },
                {
                    "size": "clamp(1.7rem, 1.4rem + 0.8vw, 2.2rem)",
                    "slug": "font-22",
                    "name": "Font 22"
                },
                {
                    "size": "clamp(1.8rem, 1.5rem + 0.9vw, 2.4rem)",
                    "slug": "font-24",
                    "name": "Font 24"
                },
                {
                    "size": "clamp(2rem, 1.6rem + 1vw, 2.8rem)",
                    "slug": "font-28",
                    "name": "Font 28"
                },
                {
                    "size": "clamp(2.3rem, 1.8rem + 1.1vw, 3.2rem)",
                    "slug": "font-32",
                    "name": "Font 32"
                },
                {
                    "size": "clamp(2.5rem, 2rem + 1.2vw, 3.4rem)",
                    "slug": "font-34",
                    "name": "Font 34"
                },
                {
                    "size": "clamp(2.8rem, 2.2rem + 1.3vw, 4rem)",
                    "slug": "font-40",
                    "name": "Font 40"
                },
                {
                    "size": "clamp(3.1rem, 2.5rem + 1.4vw, 4.8rem)",
                    "slug": "font-48",
                    "name": "Font 48"
                },
                {
                    "size": "clamp(3.3rem, 2.7rem + 1.5vw, 5rem)",
                    "slug": "font-50",
                    "name": "Font 50"
                },
                {
                    "size": "clamp(3.6rem, 2.9rem + 1.6vw, 5.6rem)",
                    "slug": "font-56",
                    "name": "Font 56"
                },
                {
                    "size": "clamp(3.6rem, 2.9rem + 2.5vw, 7.2rem)",
                    "slug": "font-72",
                    "name": "Font 72"
                },
                {
                    "size": "clamp(4.8rem, 3.8rem + 3.6vw, 10rem)",
                    "slug": "font-100",
                    "name": "Font 100"
                },
                {
                    "size": "clamp(9rem, 7rem + 6vw, 20rem)",
                    "slug": "font-200",
                    "name": "Font 200"
                }
            ],


			"fontFamilies": [
				{
					"fontFamily": "system-ui, 'Segoe UI', 'Roboto', 'Helvetica', 'Arial', sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol'",
					"name": "System",
					"slug": "system"
				  },
				  {
					"fontFamily": "'Diatype', sans-serif",
					"name": "Primary",
					"slug": "primary"
				  },
				  {
					"fontFamily": "'PP Fragment', sans-serif",
					"name": "Secondary",
					"slug": "secondary"
				  }

			]
		}
