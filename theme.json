					"name": "Purple Tint"
				},
                {
					"slug": "light-blue",
					"color": "#5FAFD0",
					"name": "Light Blue"
				},
                {
					"slug": "lighter-blue",
					"color": "#e6edf8",
					"name": "Lighter Blue"
				},
                {
					"slug": "jade",
					"color": "#75C69B",
					"name": "Jade"
				},
                {
					"slug": "jade-tint",
					"color": "#e3f2ea",
					"name": "Jade Tint"
				},
				{
					"slug": "grey",
					"color": "#B2B2B2",
					"name": "Grey"
				},
                {   
					"slug": "light-grey",
					"color": "#fafafa",
					"name": "Light Grey"
				},
                {   
					"slug": "off-white-08",
					"color": "#ffffffcc",
					"name": "Off White 0.8 Opacity"
				},
                {   
					"slug": "off-white",
					"color": "#ffffff99",
					"name": "Off White 0.6 Opacity"
				},
                {   
					"slug": "off-white-01",
					"color": "#ffffff1a",
					"name": "Off White 0.1 Opacity"
				},
				{
					"slug": "white",
					"color": "#fff",
					"name": "White"
				}
			],
            "gradients": [
                {
                  "slug": "blue-navy",
                  "gradient": "linear-gradient(45deg, #003963 10%, #07183C 90%);",
                  "name": "Dark Blue to Navy"
                },
                {
                    "slug": "glacier-cloud",
                    "gradient": "linear-gradient(45deg, #dfe8ed 10%, #e0e9eb 90%);",
                    "name": "Glacier to Cloud 25%"
                }        
            ]
		},

		"layout": {
			"contentSize": "1400px",
			"wideSize": "1400px"
		},

        "spacing": {
			"blockGap": true,
            "defaultSpacingSizes": false,
			"margin": true,
			"padding": true,
            "customSpacingSize": false,

			"spacingScale": {
				"steps": 0
			},

			"units": [ "rem", "px", "vh", "vw", "%" ],
            
            "spacingSizes": [
                {
					"size": "clamp(1rem, 0.714rem + 1.429vw, 2rem)",
					"slug": "xtra-small",
					"name": "Space S 2rem"
                },
                {
					"size": "clamp(1.4rem, 1.221rem + 0.956vw, 2.4rem)",
					"slug": "small",
					"name": "Space S 2.4rem"
                },
                {
					"size": "clamp(1.871rem, 1.478rem + 2.102vw, 3.2rem)",
					"slug": "normal",
					"name": "Space N 3.2rem"
                },
				{
					"size": "clamp(3.5rem, 2.737rem + 1.404vw, 4rem)",
					"slug": "40",
					"name": "Space N 4rem"
                },
                {
					"size": "clamp(3.7rem, 2.737rem + 1.804vw, 4.8rem)",
					"slug": "48",
					"name": "Space N 4.8rem"
                },
                {
					"size": "clamp(3.967rem, 2.575rem + 4.69vw, 5.6rem)",
					"slug": "56",
					"name": "Space 5.6rem"
                },
                {
					"size": "clamp(4rem, 1.5rem + 5vw, 6rem)",
					"slug": "m",
					"name": "Space M 6rem"
                },
                {
					"size": "clamp(5.5rem, 1.5rem + 5vw, 8rem)",
					"slug": "l",
					"name": "Space L 8rem"
                },
                {
					"size": "clamp(3rem, 1.286rem + 8.571vw, 9rem)",
					"slug": "xl",
					"name": "Space XL 9rem"
                },
                {
					"size": "clamp(2rem, 1.474rem + 2.807vw, 4rem)",
					"slug": "contentgap",
					"name": "Content Gap"
                }
            ]
		},

        "typography": {
			"dropCap": false,
			"fluid": false,
			"writingMode": true,
            "defaultFontSizes": false,
            "fontSizes": [
                {
                    "size": "clamp(1rem, 0.85rem + 0.6vw, 1.2rem)",
                    "slug": "font-12",
                    "name": "Font 12"
                },
                {
                    "size": "clamp(1.2rem, 1rem + 0.6vw, 1.4rem)",
                    "slug": "font-14",
                    "name": "Font 14"
                },
                {
                    "size": "clamp(1.3rem, 1.1rem + 0.6vw, 1.5rem)",
                    "slug": "font-15",
                    "name": "Font 15"
                },
                {
                    "size": "clamp(1.4rem, 1.2rem + 0.65vw, 1.6rem)",
                    "slug": "font-16",
                    "name": "Font 16"
                },
                {
                    "size": "clamp(1.5rem, 1.25rem + 0.7vw, 1.8rem)",
                    "slug": "font-18",
                    "name": "Font 18"
                },
                {
                    "size": "clamp(1.6rem, 1.3rem + 0.75vw, 2rem)",
