	"styles": {

        "spacing": {
            "padding": {
                "left": "var(--wp--preset--spacing--contentgap)",
                "right": "var(--wp--preset--spacing--contentgap)"
            }
        },

        "blocks": {
            "core/site-title": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--secondary)",
                    "fontSize": "var(--wp--preset--font-size--font-40)",
                    "fontWeight": "400",
                    "lineHeight": "1.4"
                }
            },

            "core/post-title": {
                "color": {
                    "text": "var(--wp--preset--color--primary)"
                },
                "typography": {
					"fontFamily": "var(--wp--preset--font-family--secondary)",
                    "fontSize": "var(--wp--preset--font-size--font-40)",
                    "fontWeight": "500",
                    "lineHeight": "1.25",
                    "textTransform": "none"
                }
            },

            "core/button": {
                "color": {
                    "text": "var(--wp--preset--color--white)",
                    "background": "var(--wp--preset--color--purple)"
                },
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--primary)",
                    "fontSize": "var(--wp--preset--font-family--font-18)",
                    "fontWeight": "400",
                    "lineHeight": "1.05"
                },
                "spacing": {
                    "padding": {
                        "top": "1ch",
                        "right": "2ch",
                        "bottom": "1ch",
                        "left": "2ch"
                    }
                }
            },

            "core/group": {
                "spacing": {
                    "padding": {
                        "top": "12rem",
                        "bottom": "12rem"
                    }
                }
            },

            "core/columns": {
                "spacing": {
                    "blockGap": "clamp(4rem, 6vw, 10rem)"
                }
            },
            

            "core/paragraph": {
                "typography": {
                    "lineHeight": "160%",
                    "fontSize": "var(--wp--preset--font-size--font-20)",
                    "fontWeight": "400"
                },
                "spacing": {
                    "margin": {
                        "bottom": "16px"
                    }
                }
            }
        },

        "color": {
            "background": "var(--wp--preset--color--white)",
            "text": "#01003599"
        },
        
        "elements": {
            "h1": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--secondary)",
                    "fontSize": "var(--wp--preset--font-size--font-56)",
                    "fontWeight": "300",
                    "lineHeight": "110%",
                    "textTransform": "none"
                },
                "spacing": {
                    "margin": {
                        "bottom": ".8ch"
                    }
                },
                "color": {
                    "text": "var(--wp--preset--color--primary)"
                }
            },
        "h2": {
            "typography": {
                "fontFamily": "var(--wp--preset--font-family--secondary)",
                "fontSize": "var(--wp--preset--font-size--font-56)",
                "fontWeight": "300",
                "lineHeight": "120%",
                "textTransform": "none"
            },
            "spacing": {
                "margin": {
                    "bottom": "4rem"
                }
            },
            "color": {
                "text": "var(--wp--preset--color--primary)"
            }
        },
        "h3": {
            "typography": {
                "fontFamily": "var(--wp--preset--font-family--secondary)",
                "fontSize": "var(--wp--preset--font-size--font-40)",
                "fontWeight": "300",
                "lineHeight": "130%",
                "textTransform": "none"
            },
            "spacing": {
                "margin": {
                    "bottom": "4rem"
                }
            },
            "color": {
                "text": "var(--wp--preset--color--primary)"
            }
        },
        "h4": {
            "typography": {
                "fontFamily": "var(--wp--preset--font-family--secondary)",
                "fontSize": "var(--wp--preset--font-size--font-32)",
                "fontWeight": "300",
                "lineHeight": "130%",
                "textTransform": "none"
            },
            "spacing": {
                "margin": {
                    "bottom": "4rem"
                }
            },
            "color": {
                "text": "var(--wp--preset--color--primary)"
            }
        },
        "h5": {
            "typography": {
                "fontFamily": "var(--wp--preset--font-family--secondary)",
                "fontSize": "var(--wp--preset--font-size--font-24)",
                "fontWeight": "300",
                "lineHeight": "120%",
                "textTransform": "none"
            },
            "spacing": {
                "margin": {
                    "bottom": "4rem"
                }
            },
            "color": {
                "text": "var(--wp--preset--color--primary)"
            }
        },
        "h6": {
            "typography": {
                "fontFamily": "var(--wp--preset--font-family--secondary)",
                "fontSize": "var(--wp--preset--font-size--font-18)",
                "fontWeight": "300",
                "lineHeight": "120%",
                "textTransform": "none"
            },
            "spacing": {
                "margin": {
                    "bottom": "4rem"
                }
            },
            "color": {
                "text": "var(--wp--preset--color--primary)"
            }
        },

        "link": {
            "color": {
           		"text": "var(--wp--preset--color--primary)"
            },
            ":hover": {
				"color": {
					"text": "var(--wp--preset--color--orange)"
				}
            }
        }
        },

        "typography": {
            "fontFamily": "var(--wp--preset--font-family--primary)",
            "fontSize": "var(--wp--preset--font-size--font-20)",
            "lineHeight": "160%"
        }
    }

}